<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_background"
    tools:context=".view.activity.MainActivity">

    <!-- Thanh công cụ (Toolbar) ở trên cùng -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_header_gradient">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Home Library"
            app:titleTextColor="@android:color/black"
            app:navigationIcon="@drawable/ic_menu" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung chính có thể cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Dòng 1 với 2 thẻ chức năng -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_quan_ly_sach"
                style="@style/HomeCardStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_quan_ly_phieu_muon">
                <LinearLayout style="@style/HomeCardContentStyle">
                    <ImageView style="@style/HomeIconStyle" android:src="@drawable/ic_book_management" android:contentDescription="@string/quan_ly_sach"/>
                    <TextView style="@style/HomeTextStyle" android:text="@string/quan_ly_sach"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_quan_ly_phieu_muon"
                style="@style/HomeCardStyle"
                app:layout_constraintTop_toTopOf="@id/card_quan_ly_sach"
                app:layout_constraintStart_toEndOf="@id/card_quan_ly_sach"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout style="@style/HomeCardContentStyle">
                    <ImageView style="@style/HomeIconStyle" android:src="@drawable/ic_borrow_ticket" android:contentDescription="@string/quan_ly_phieu_muon"/>
                    <TextView style="@style/HomeTextStyle" android:text="@string/quan_ly_phieu_muon"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dòng 2 với 2 thẻ chức năng -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_quan_ly_doc_gia"
                style="@style/HomeCardStyle"
                app:layout_constraintTop_toBottomOf="@id/card_quan_ly_sach"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_thong_ke">
                <LinearLayout style="@style/HomeCardContentStyle">
                    <ImageView style="@style/HomeIconStyle" android:src="@drawable/ic_members" android:contentDescription="@string/quan_ly_doc_gia"/>
                    <TextView style="@style/HomeTextStyle" android:text="@string/quan_ly_doc_gia"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_thong_ke"
                style="@style/HomeCardStyle"
                app:layout_constraintTop_toBottomOf="@id/card_quan_ly_phieu_muon"
                app:layout_constraintStart_toEndOf="@id/card_quan_ly_doc_gia"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout style="@style/HomeCardContentStyle">
                    <ImageView style="@style/HomeIconStyle" android:src="@drawable/ic_statistics" android:contentDescription="@string/thong_ke"/>
                    <TextView style="@style/HomeTextStyle" android:text="@string/thong_ke"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút đăng xuất ở cuối -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Đăng Xuất"
                app:icon="@drawable/ic_logout"
                app:layout_constraintTop_toBottomOf="@id/card_quan_ly_doc_gia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>